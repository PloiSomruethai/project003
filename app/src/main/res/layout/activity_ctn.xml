<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309"
        android:layout_width="265dp"
        android:layout_height="199dp"
        android:layout_gravity="center"
        android:src="@drawable/question"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/btn_answer"
        android:layout_width="194dp"
        android:layout_height="57dp"
        android:layout_marginBottom="68dp"
        android:background="@color/colorButton"
        android:text="ดูคำตอบ"
        app:fontFamily="@font/kanit_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_search"
        app:layout_constraintBottom_toTopOf="@+id/btn_answer"
        android:textSize="24sp"
        app:fontFamily="@font/kanit_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="คุณอยากถามอะไร?"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="542dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="54dp"
        android:autoText="false"
        android:text="ถามอะไรตอบได้"
        android:textColor="#855454"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/chonburi"
        app:layout_constraintBottom_toTopOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

</androidx.constraintlayout.widget.ConstraintLayout>